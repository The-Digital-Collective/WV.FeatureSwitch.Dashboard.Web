@model WV.FeatureSwitch.Dashboard.Web.ViewModels.FeatureViewModel

@{
    String action = ViewBag.Action;
}



<form method="post">

    <div class="form-horizontal">
        <h4>
            @action Choosing Event
        </h4>

        <div class="form-group pull-right">
            <div>
                <input type="submit" value="Save" class="btn btn-primary" /> &nbsp; &nbsp;
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
        <hr />

        &nbsp;
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="Id" type="hidden" />
    
        <div class="form-group">
            <label asp-for="Name" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Flag" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="Flag" class="form-control" />
                <span asp-validation-for="Flag" class="text-danger"></span>
            </div>
        </div>
        


    </div>
</form>

@if (action == "Edit")
{
<div>
    <div class="control-label col-md-2"></div>
    <a asp-action="Delete" asp-route-name="@Model.Name" class="btn btn-danger">Delete</a>

</div>
}
