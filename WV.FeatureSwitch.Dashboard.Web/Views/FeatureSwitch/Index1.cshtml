@model WV.FeatureSwitch.Dashboard.Web.ViewModels.FeatureSwitchViewModel

@{
    ViewData["Title"] = "Index";
}

<h4>Feature Switch</h4>
<hr />

<p>
    <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="fa fa-plus-square"></i>Create New</a>
</p>
<p>
    <a asp-action="Delete" class="btn btn-outline-success"><i class="fa fa-trash-alt"></i>Batch Delete</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                <input type="checkbox" name="allCheck" id="selectAll" />Select All
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeatureModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeatureModel[0].Flag)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FeatureModel) {
        <tr>
            <td>
                <input type="hidden" asp-for="@item.SelectedItem.Value" />
                <input asp-for="@item.SelectedItem.Selected" />
                <input type="hidden" asp-for="@item.Id" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flag)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.Id"><i class="fa fa-marker fa-lg"></i>Change</a> |
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1" onclick="return confirm('Are you sure you want to delete this Feature Switch?')"><i class="fa fa-trash-alt fa-lg"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section scripts{ 

<script>
    $(function)() {
        $("#selectAll").click(function () {
            $("#input[type=checkbox]").prop('checked', $(this).prop('checked'));
        });
        $("#input[type=checkbox]").click(function () {
            if (!$(this).prop("checked")) {
                $("selectAll").prop("checked", false);
            }
        })
    }
</script>




}
